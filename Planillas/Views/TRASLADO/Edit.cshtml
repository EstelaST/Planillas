@model Planillas.V_TRASLADOS

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Modificar</h2>


@using (Html.BeginForm("Edit", "TRASLADO", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Traslado</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CODIGO_TRASLADOS)

    <div class="form-group">
        <label class="control-label col-md-2"> Empleado</label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CODIGO_EMPLEADO, new SelectList(ViewBag.EMPLEADO, "CODIGO_EMPLEADO", "PRIMER_NOMBRE"), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CODIGO_EMPLEADO, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Àrea a trasladar</label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CODIGO_AREA_DESTINO, new SelectList(ViewBag.AREA, "CODIGO_AREA", "NOMBRE_AREA"), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CODIGO_AREA_DESTINO, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Nuevo puesto</label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CODIGO_TIPO_EMPLEADO_ACTUAL, new SelectList(ViewBag.TIPO_EMPLEADO, "CODIGO_TIPO_EMPLEADO", "NOMBRE_TIPO_EMPLEADO"), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CODIGO_TIPO_EMPLEADO_ACTUAL, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Estado</label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ESTADO_TRASLADO, new SelectList(ViewBag.ESTADO, "Key", "Value"), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ESTADO_TRASLADO, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Fecha de Traslado</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.FECHA_TRASLADO, new { htmlAttributes = new { @class = "form-control", @type = "date", @value = "2023-07-22", @min = "2010-01-01", @max = "2100-12-31" } })
            @Html.ValidationMessageFor(model => model.FECHA_TRASLADO, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-success" />
        </div>
    </div>

</div>
}

<div>
    <button type="button" class="btn btn-secondary">@Html.ActionLink("Regresar", "TRASLADO")</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
