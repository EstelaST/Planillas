@model Planillas.AREA

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Modificar</h2>


@using (Html.BeginForm("Edit", "AREA", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Áreas</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CODIGO_AREA)

        <div class="form-group">
            <label> Nombre</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOMBRE_AREA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOMBRE_AREA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success"/>
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-secondary">@Html.ActionLink("Regresar", "AREA")</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
