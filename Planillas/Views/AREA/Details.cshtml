@model Planillas.AREA

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div>
    <h4>Área</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NOMBRE_AREA)
        </dd>

    </dl>
</div>
<p>
    <button type="button" class="btn btn-success">@Html.ActionLink("Modificar", "Edit", new { id = Model.CODIGO_AREA })</button>
    <button type="button" class="btn btn-secondary">@Html.ActionLink("Regresar", "AREA")</button>

</p>
