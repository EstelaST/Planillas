@model Planillas.USUARIO

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "USUARIO", FormMethod.Post))
{
<div class="card-body p-5 text-center">

    <div class="mb-md-5 mt-md-4 pb-5">

        <div class="form-horizontal d-grid justify-content-center" style="
    align-content: center;
">
            <h4>Login</h4>
            <hr>

            <div class="form-outline form-white mb-4">
                <label>Usuario</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NOMBRE, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-outline form-white mb-4">
                <label>Contraseña</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CONTRASENA, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.CONTRASENA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-outline form-white mb-4" style="
">
                <div class="col-md-10">
                    <input type="submit" value="Ingresar" class="btn btn-success">
                </div>
            </div>
        </div>
    </div>
</div>

}