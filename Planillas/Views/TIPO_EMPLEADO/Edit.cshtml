@model Planillas.TIPO_EMPLEADO

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "TIPO_EMPLEADO", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Tipo de Empleado</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CODIGO_TIPO_EMPLEADO)

        <div class="form-group">
            <label> Nombre</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOMBRE_TIPO_EMPLEADO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOMBRE_TIPO_EMPLEADO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label> Sueldo</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SUELDO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SUELDO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-secondary">@Html.ActionLink("Regresar", "TIPO_EMPLEADO")</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
